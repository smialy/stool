{
    "compilerOptions": {
        "allowJs": false,
        "target": "esnext",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "strict": true,
        "listEmittedFiles": true,
        "outDir": "./src",
        "declaration": true,
        "declarationDir":"./types"
    },
    "files": [
        "ts/index.ts",
        "ts/decorators.ts",
        "ts/resolvers.ts",
        "ts/container.ts"
    ],
    "exclude": [
        "node_modules",
        "src/*"
    ]
}
